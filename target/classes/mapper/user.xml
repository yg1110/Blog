<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yg1110.blog">
	<select id="getUserList" resultType="com.boot.dto.User">
		SELECT * FROM USER
	</select>

	<select id="findUser" parameterType="java.lang.String" resultType="com.boot.dto.User">
		SELECT * FROM USER WHERE EMAIL = #{email}
	</select>
	
	<insert id="insertUser" parameterType="com.boot.dto.User">
		INSERT INTO USER(EMAIL, PWD) VALUES(#{email}, #{pwd});
	</insert>
	
</mapper>