<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yg1110.blog">
	<select id="getUserList" resultType="com.boot.dto.User">
		SELECT * FROM USER
	</select>

	<select id="findUser" parameterType="com.boot.dto.User" resultType="com.boot.dto.User">
		SELECT * FROM USER WHERE ID = #{username} AND PWD = #{password}
	</select>
	
	<insert id="insertUser" parameterType="com.boot.dto.User">
		INSERT INTO USER(ID, ENABLED, PASSWORD, USERNAME) VALUES(#{id}, 1, #{password}, #{username})
	</insert>
	
	<insert id="insertAuth" parameterType="com.boot.dto.Auth">
		INSERT INTO AUTHORITIES_USERS(USUARIO_ID, AUTHORITY_ID) VALUES(#{usuario_id},#{authority_id})
	</insert>
</mapper>