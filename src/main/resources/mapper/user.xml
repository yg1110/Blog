<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yg1110.blog">
	<select id="getMemberList" resultType="com.boot.dto.Member">
		SELECT * FROM BLOG.MEMBER
	</select>

	<select id="findMember" parameterType="com.boot.dto.Member" resultType="com.boot.dto.Member">
		SELECT * FROM BLOG.MEMBER WHERE ID = #{id} AND PWD = #{pwd}
	</select>
	
	<insert id="insertMember" parameterType="com.boot.dto.Member">
		INSERT INTO BLOG.MEMBER(ID, NAME, PWD, AUTH) VALUES(#{id}, #{name}, #{pwd}, 2);
	</insert>
	
</mapper>